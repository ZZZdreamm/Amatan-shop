<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shop.styles.css" asp-append-version="true" />
</head>
<style>
    .bodyLook{
        background-color:lightblue;
    }
    .logoName{
        width:130px;
        font-size:35px;
    }
    .aboutMeHyperlink{
        font-size:20px;
    }
    .shopHyperlink{
        font-size:20px;
    }
    .yourFavourites{
        position:absolute;
        top:15px;
        right:22%;
         width:40px;
         height:40px;
         background:white;
        
    }
    .yourMessages{
         position:absolute;
        right:18%;
        border:0;
        margin:0;
        padding:0;
        background:white;
       
    }
    .yourNotifications{
         position:absolute;
        right:14%;
          border:0;
        margin:0;
        padding:0;
        background:white;
        
    }
     .yourMessagesImage{
         width:40px;
         height:40px;
     }
    .yourNotificationsImage{
        width:40px;
         height:40px;
    }
    .cart{
        position:absolute;
        right:10%;
        top:15px;
         width:40px;
         height:40px;
         background:white;
    }
    .search{
		width:500px;
	}
	.searchForm{
		position:absolute;
		left:400px;

	}
    .searchButton{
        position:absolute;
        top:0px;
        left:600px;
    }
      .searchCategory{
          position:absolute;
          left:500px;
          top:0px;
          width:100px;
          height:38px;
    }
    .footer {
       position:fixed;
       bottom:0;
       width:100%;
       height:60px;  
       background:brown;
    }
    .header{
         background-color:white;
    }
  

</style>

<body class="bodyLook">
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand logoName" asp-area="" asp-controller="Home" asp-action="Index">Amazom</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <li class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark aboutMeHyperlink" asp-area="" asp-controller="Home" asp-action="About_Me">About Me</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark shopHyperlink" asp-area="" asp-controller="Home" asp-action="Shop">Shop</a>
                        </li>

                       

                        <li class="nav-item">
                           <a class="nav-link text-dark" href="~/Home/GenerateView?nameOfView=YourFavourites"><img class="yourFavourites" src="~/img//star.png"/></a>
                        </li>
                        <li class="nav-item">
                          
                              <button class="yourMessages"><img class="yourMessagesImage" src="~/img/messages.png"/></button>

                        </li>
                        <li class="nav-item">
                         
                            <button class="yourNotifications"><img class="yourNotificationsImage" src="~/img/notifications.png"/></button>

                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="OpenCart"><img class="cart" src="~/img/cart.png"/></a>
                        </li>
                        <form asp-controller="Home" asp-action="SearchForItem" class="searchForm">
	                        <li class="nav-item">
		                        <input name="searchTerm" class="form-control search" />
	                        </li>
	                        <li class="nav-item">
		                        <input type="submit" value="Search" class="btn btn-primary searchButton" />
	                        </li>
                            <li class="nav-item">
		                        <select name="categories" class="searchCategory">
                                      <option value="Mitsubishi">Mitsubishi</option>
                                      <option value="Chevrolet">Chevrolet</option>
                                      <option value="Toyota">Toyota</option>
                                      <option value="Ford">Ford</option>
                                      <option value="Audi">Audi</option>
                                      <option value="Suzuki">Suzuki</option>
                                </select>
	                        </li>
                        </form>
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted footer">
        <div class="container">
            &copy; 2022 - Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
